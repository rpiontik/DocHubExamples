    ]
    !elseif ($entity == actor || $entity == person)
'nothing
    !else
    ]
    !endif
    $join_end()
!endprocedure

!unquoted procedure $EntityAspect($entity, $prop)
    !if ($entity == component)
        !$val = $join_append()
        !if ($val != 0)
        ---
        !endif
        * $prop
    !elseif ($entity == system)
        * $prop
    !elseif ($entity == actor || $entity == person)
'nothing
    !else
        * $prop
    !endif
!endprocedure

